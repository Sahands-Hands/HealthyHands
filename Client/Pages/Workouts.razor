    <div>
        <div style="float:left">
            <button class="btn btn-primary" @onclick="@AddPopupWorkout">Add Workout</button>
        </div>
        <div style="float:right; width:40%;">
            <div class="col-sm-6" style="float:left">
                <input class="form-control" type="text" placeholder="Search" bind="@SearchString" />
            </div>
            <div>
                <button type="submit" class="btn btn-default btn-info" onclick="@UpdateWorkout">Filter</button>
            </div>
        </div>
    </div>

