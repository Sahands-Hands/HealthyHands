@page "/userworkouts"

<PageTitle>Workouts</PageTitle>

<h1>Workouts</h1>

@if(User == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>Workout Name</th>
				<th>Workout Type</th>
				<th>Intensity</th>
				<th>Length</th>
				<th>Workout Date</th>				
				<th>Calories Burned</th>
			</tr>
		</thead>
		@foreach (var u in User.UserWorkouts)
		{
			<tbody>
				<tr>
					<td>@u.WorkoutName</td>
					<td>@u.WorkoutType</td>
					<td>@u.Intensity</td>
					<td>@u.Length</td>
					<td>@u.WorkoutDate</td>
					<td>@u.CaloriesBurned</td>
				</tr>
			</tbody>
		}
		@* <!-- <button class="button" @onclick="UpdateWorkouts()">Add Workout</button> --> *@
		
	</table>
}