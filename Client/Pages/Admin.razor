@page "/Admin"
<PageTitle>Admin Features</PageTitle>
<h3>AdminFeatures</h3>

@if (UsersList == null)
{
    <h3>Loading....</h3>
}
else
{
    <table class="table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Admin</th>
                    <th>PromoteToAdmin</th>
                    <th>Locked Out</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var user in UsersList)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.IsAdmin</td>
                    <td><button class="btn btn-primary" @onclick="() => PromoteToAdmin(@user.Id)">Promote</button></td>
                    <td>@user.LockoutEnabled</td>
                </tr>
            }
            </tbody>
        </table>
} 