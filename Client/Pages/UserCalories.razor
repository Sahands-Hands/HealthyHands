@page "/usercalories"


 
<title My page </title>


@if (User == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <button class="btn btn-primary" type="button" @onclick="MaintainWeight" >Maintain Weight</button>
    <button class="btn btn-primary" type="button" @onclick="LoseWeight" >Lose Weight</button>
    <button class="btn btn-primary" type="button" @onclick="GainWeight" >Gain Weight</button>
    <div>
        <h3>@Message</h3>
        <h3>@CalorieMessage</h3>
    </div>
}